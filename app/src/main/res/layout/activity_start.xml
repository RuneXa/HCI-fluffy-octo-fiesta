<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.runexa.hci_uas.StartActivity">

    <Button
        android:id="@+id/start_button_register"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar"/>

    <Button
        android:id="@+id/start_button_login"
        android:layout_above="@+id/start_button_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masuk"/>

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/start_pager"
        android:layout_above="@+id/start_button_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>
