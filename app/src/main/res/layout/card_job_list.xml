<!-- A CardView that contains a TextView -->
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/jobList_card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="2dp"
    android:layout_margin="5dp"
    android:clickable="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/info_header">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/info_image"
                android:scaleType="centerInside"
                android:src="@drawable/default_360x360"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                />

            <TextView
                android:id="@+id/info_text_title"
                android:layout_toEndOf="@id/info_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_margin="@dimen/activity_horizontal_margin"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/info_text"
            android:orientation="vertical"
            android:layout_below="@id/info_header"
            android:layout_margin="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/info_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posisi :"/>

                <TextView
                    android:id="@+id/info_job_PH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="Posisi Pekerjaan"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/info_contact_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mail :"/>

                <TextView
                    android:id="@+id/info_contact_email_PH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="Email"/>
            </LinearLayout>

            <TextView
                android:id="@+id/info_contact_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat :"/>

            <TextView
                android:id="@+id/info_contact_address_PH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:text="Alamaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaat"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
